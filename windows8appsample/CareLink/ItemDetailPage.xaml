        <StackPanel HorizontalAlignment="Left" Height="146" Margin="1078,28,0,0" Grid.Row="1" VerticalAlignment="Top" Width="256">
            <TextBlock TextWrapping="Wrap" FontSize="20" FontFamily="Segoe Marker" Height="237" Margin="0,0,10,0">
